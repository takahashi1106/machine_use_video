<header>
<ul>
<% if user_signed_in? %>

  <%#= current_user.first_name %>

<li class="nav-item">
<%= link_to user_path(current_user), class: 'nav-link text-dark' do %>
<i class="fas fa-user-alt"></i> マイページ
<% end %>
</li>

<li class="nav-item">
<%= link_to machines_path, class: 'nav-link text-dark' do %>
<i class="fas fa-birthday-cake"></i> 機械一覧
<% end %>
</li>

<li class="nav-item">
<%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-dark' do %>
<i class="fas fa-sign-out-alt"></i> ログアウト
<% end %>
</li>

<% elsif admin_signed_in? %>
<li class="nav-item">
<%= link_to admin_machines_path, class: 'nav-link text-dark' do %>
<i class="fas fa-birthday-cake"></i> 機械一覧
<% end %>
</li>

<li class="nav-item">
<%= link_to admin_users_path, class: 'nav-link text-dark' do %>
<i class="fas fa-users"></i> 会員一覧
<% end %>
</li>

<li class="nav-item">
<%= link_to admin_genres_path, class: 'nav-link text-dark' do %>
<i class="fas fa-candy-cane"></i> ジャンル一覧
<% end %>
</li>

<li class="nav-item">
<%= link_to destroy_admin_session_path, method: :delete, class: 'nav-link text-dark' do %>
<i class="fas fa-sign-out-alt"></i> ログアウト
<% end %>
</li>

<% else %>
<li class="nav-item">
<%= link_to machines_path, class: 'nav-link text-dark' do %>
<i class="fas fa-birthday-cake"></i> 商品一覧
<% end %>
</li>

<li class="nav-item">
<%= link_to new_user_registration_path, class: 'nav-link text-dark' do %>
<i class="fas fa-user-plus"></i> 新規登録
<% end %>
</li>

<li class="nav-item">
<%= link_to new_user_session_path, class: 'nav-link text-dark' do %>
<i class="fas fa-sign-in-alt"></i> ログイン
<% end %>
</li>

<% end %>
</ul>
</header>
