<div class="album py-5 bg-light">
  <div class="container">
    <h2 class="mt-3">いいね画面</h2>
      <div class="mt-5">
        <div class="row">
          <% @likes.each do |like| %>
            <div class="col-md-4">
              <% if like.video.attached? %>
              <%= video_tag url_for(like.video), size: "300x300", controls: true %></br>
              <% end %>
                <div class="btn-group">
                  <div class="card-text">
                  <%= like.genre.name %> : <%= like.name %> <%= render 'public/favorites/btn', machine: like %>
                    <div class="d-flex justify-content-between align-items-center">
                    <%= like.explanation %>
                    </div>
                  </div>
                </div>
            </div>
          <% end %>
        </div>
      </div>
  </div>
</div>
