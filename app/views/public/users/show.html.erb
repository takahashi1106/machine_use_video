<div class="container">
  <h2 class="mt-5">ユーザー詳細画面</h2>

    <div>
      <%= @user.last_name %>
      <%= @user.first_name %></br>
      <%= @user.email %></br>
      <%= @user.tel_number %></br>
    </div>

      <div>
        <% if @user.user_name!= "guestuser" %>
          <%= link_to '編集',edit_user_path(@user), class: 'btn btn-success' %></br>
            <% if user_signed_in? && @user.id == current_user.id %>
              <%= link_to "退会", unsubscribe_user_path(current_user), class: "btn btn-outline-danger" %>
            <% end %>
        <% end %>
      </div>
    <div><%= link_to "いいねした動画", like_user_path(current_user) %></div>
</div>