<div class="container">
  <h2 class="pt-5">Sign up</h2>
    <div class="mt-3">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :性 %></br>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
        </div>

        <div class="field">
          <%= f.label :名 %></br>
          <%= f.text_field :first_name, autocomplete: "first_name" %>
        </div>

        <div class="field">
          <%= f.label :email %></br>
          <%= f.email_field :email, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :"電話番号" %>(ハイフン有)</br>
          <%= f.text_field :tel_number, autocomplete: "tel_number" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="mt-3">
          <div class="actions">
          <%= f.submit "Sign up" %>
          </div>
        </div>
      <% end %>
    <%= render "public/shared/links" %>
    </div>
</div>