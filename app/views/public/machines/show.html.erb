<div class="container">
<h2 class="mt-5">ユーザー商品詳細画面</h2>

<%= render 'layouts/errors', obj: @error_comment %>

<% if @machine.video.attached? %>
<%= video_tag url_for(@machine.video), size: "300x300", controls: true %></br>
<% end %>

型式 : <%= @machine.name %></br>

説明文 : <%= @machine.explanation %></br>

ジャンル : <%= @machine.genre.name %></br>

<%= render 'public/favorites/btn', machine: @machine %>

<div>
<% @machine.machine_comments.each do |machine_comment| %>
<%= machine_comment.user.user_name %></br>
<%= machine_comment.created_at.strftime('%Y/%m/%d') %></br>
<%= machine_comment.comment %>
<% if machine_comment.user == current_user %><%= link_to "削除", machine_machine_comment_path(machine_comment.machine, machine_comment), method: :delete %></br>
<% end %>
<% end %>
</div>
<div>
<%= form_with model: [@machine, @machine_comment] do |f| %>
<%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %></br>
<%= f.submit "送信する" %></br>
<% end %>
</div>

</div>