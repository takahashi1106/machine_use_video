<div class="container">
  <h2 class="mt-5">ユーザー商品詳細画面</h2>


<% if @machine.video.attached? %>
<%= video_tag url_for(@machine.video), size: "300x300", controls: true %></br>
<% end %>

<%= @machine.name %></br>

<%= @machine.explanation %></br>

<%= @machine.genre.name %></br>

<%= render 'public/favorites/btn', machine: @machine %>

</div>

<div>
<p>コメント件数：<%= @machine.machine_comments.count %></p>
<% @machine.machine_comments.each do |machine_comment| %>
<%= machine_comment.user.last_name %><%= machine_comment.user.first_name %>
<%= machine_comment.created_at.strftime('%Y/%m/%d') %><%= machine_comment.comment %>
<% end %>
</div>
<div>
<%= form_with model: [@machine, @machine_comment] do |f| %>
<%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
<%= f.submit "送信する" %>
<% end %>
</div>