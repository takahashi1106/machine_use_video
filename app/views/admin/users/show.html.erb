<div class="container">
  <h2 class="pt-5"><%= @user.user_name %>さん</h2>
    <div class="mt-4">
      <div class="row">
        <div class="col-lg-12">
          <% if @user.is_deleted == true %>
          <span class="text-danger">退会済</span>
          <% elsif @user.is_deleted == false %>
          <span class="text-success">有効会員</span>
          <% end %>
        </div>
      </div>
    </div>

    <table class="table table-borderless">
      <tbody>
        <tr><th class="col-6">性</th><td><%= @user.last_name %></td></tr>
        <tr><th>名</th><td><%= @user.first_name %></td></tr>
        <tr><th>メール</th><td> <%= @user.email %></td></tr>
        <tr><th>電話番号</th><td><%= @user.tel_number %></td></tr>
      </tbody>
    </table>
    
      <div>
      <%= link_to "編集する",edit_admin_user_path(@user), class: "btn btn-success" %>
      </div>
</div>
