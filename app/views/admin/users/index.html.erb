<div class="container">
  <h2 class="mt-5">会員一覧画面</h2>
    <div class="mt-5">
      <div class="row">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>フルネーム</th>
                <th>メールアドレス</th>
                <th>電話番号</th>
                <th>ステータス</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr onclick='window.location="<%= '/admin/users/' + user.id.to_s %>"' role="link">
                  <td><%= user.user_name %></td>
                  <td><%= user.email %></td>
                  <td><%= user.tel_number %></td>
                  <td>
                    <% if user.is_deleted == true %>
                    <span class="text-danger">退会済</span>
                    <% else %>
                    <span class="text-success">有効</span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <%= paginate @users, theme: 'bootstrap-5' %>
      </div>
    </div>
</div>