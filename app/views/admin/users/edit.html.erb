<div class="container">
  <h2 class="pt-5"><%= @user.user_name %>さんの会員詳細</h2>
    <%= form_with model: @user, url: admin_user_path, method: :patch do |f| %>
      <div class="mt-5">
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td>氏名</td>
              <td>
                <div class="form-group">
                  <div class="form-inline">
                  <%= f.text_field :last_name, class: "col-sm-5 form-control" %>
              　　<%= f.text_field :first_name, class: "col-sm-5 form-control" %>
                  </div>
                </div>
              </td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td>
                <div class="form-group">
                  <div class="form-inline">
                  <%= f.text_field :email, class: "col-sm-10 form-control" %>
                  </div>
                </div>
                </td>
            </tr>
            <tr>
              <td>電話番号</br>(11桁ハイフン有)</td>
              <td>
                <div class="form-group">
                  <div class="form-inline">
                  <%= f.text_field :tel_number, class: "col-sm-5 form-control" %>
                  </div>
                </div>
              </td>
            </tr>
            <tr>
              <td>会員ステータス</td>
              <td>
                <div class="form-group">
                  <div class="form-inline">
                  <%= f.radio_button :is_deleted, false %>
                　<%= f.label :有効 %>

                  <%= f.radio_button :is_deleted, true %>
                　<%= f.label :退会 %>
                　</div>
                </div>
              </td>
            </tr>
            <tr>
              <td></td>
              <td>
                <div class="row justify-content-center">
                  <div class="col-1">
                  <%= f.submit '変更' ,class: "btn btn-primary" %>
                  </div>
                    <div class="col-7">
                    <%= link_to "戻る", admin_user_path, class: "btn btn-secondary" %>
                    </div>
                </div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    <% end %>
</div>