<div class="container">
  <h2 class="mt-5"><%= @user.user_name %>さんの会員詳細</h2>
  <%= render 'layouts/errors', obj: @user %>
    <%= form_with model: @user, url: admin_user_path, method: :patch do |f| %>
      <div class="row">
        <div class="col-xs-8 mt-3">
          <table class="table table-borderless">
            <tbody>
              <tr>
                <td>氏名</td>
                <td>
                  <div class="form-group">
                    <div class="form-inline">
                      <%= f.text_field :last_name, class: "col-sm-5 form-control" %>
                  　　<%= f.text_field :first_name, class: "col-sm-5 form-control" %>
                    </div>
                  </div>
                </td>
              </tr>
            <tr>
                <td>メールアドレス</td>
                <td>
                  <div class="form-group">
                    <div class="form-inline">
                      <%= f.text_field :email, class: "col-sm-10 form-control" %>
                    </div>
                  </div>
                </td>
              </tr>
              <tr>
    
                <td>電話番号</td>
                <td>
                  <div class="form-group">
                    <div class="form-inline">
                      <%= f.text_field :tel_number, class: "col-sm-5 form-control" %>
                    </div>
                  </div>
                </td>
              </tr>
                <td>会員ステータス</td>
                <td>
                  <%= f.radio_button :is_deleted, false %>
                　<%= f.label :有効 %>
                  　<%= f.radio_button :is_deleted, true %>
                　<%= f.label :退会 %>
                </td>
              </tr>
              <tr>
                <td></td>
                <td>
                  <%= f.submit '変更を保存する' ,class: "btn btn-primary" %>
                  <%= link_to "戻る", admin_user_path, class: "btn btn-info" %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    <% end %>
</div>