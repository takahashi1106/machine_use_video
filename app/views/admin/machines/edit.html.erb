<div class="container">
  <h2 class="pt-5">編集画面</h2>
    <div class="mt-5">
      <div class="row justify-content-center">
        <%= form_with model: @machine, url: admin_machine_path do |f| %>

          <div class="form-group row">
            <div class="col-lg-5">
            <%= f.label :機械動画 %>
            </div>
              <div class="col-lg-7">
              <%= f.file_field :video, accept: "video/*"%>
              </div>
          </div>

          <div class="form-group row">
            <div class="col-lg-5">
            <%= f.label :型式名 %>
            </div>
              <div class="col-lg-5">
              <%= f.text_field :name %>
              </div>
          </div>

          <div class="form-group row">
            <div class="col-lg-5">
            <%= f.label :機械説明文 %>
            </div>
              <div class="col-lg-5">
              <%= f.text_area :explanation %>
              </div>
          </div>

          <div class="form-group row">
            <div class="col-lg-5">
            <%= f.label :ジャンル名 %>
            </div>
              <div class="col-lg-2">
              <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "ジャンルを選んでください"%>
              </div>
          </div>

          <div class="mt-3">
            <div class="field">
            <%= f.submit '保存', class: 'btn btn-primary' %>
            </div>
          </div>

        <% end %>
      </div>
    </div>
</div>