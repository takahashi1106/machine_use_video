<div class="container">
  <h2 class="mt-5">管理者側機械編集表示</h2>

  <div class="row px-5 mx-5">
    <div class="col-6 offset-3">
      <%= render 'layouts/errors', obj: @machine %>
        <%= form_with model: @machine, url: admin_machine_path do |f| %>
          <div class="field form-group row">
            <%= f.label :機械動画, class: "col-4" %>
            <%= f.file_field :video, accept: "video/*" %>
          </div>

          <div class="field form-group row">
            <%= f.label :型式名, class: "col-3" %>
            <%= f.text_field :name %>
          </div>

          <div class="field form-group row">
            <%= f.label :機械説明文, class: "col-3" %>
            <%= f.text_area :explanation %>
          </div>

          <div class="field form-group row">
            <%= f.label :ジャンル名, class: "col-3" %>
            <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "ジャンルを選んでください"%>
          </div>

          <div class="field form-group row">
            <div class="col-7 offset-4">
              <%= f.submit '保存', class: 'btn btn-primary' %>
            </div>
          </div>
        <% end %>
    </div>
  </div>

</div>