<div class="container">
  <h2 class="mt-5">管理者側機械一覧表示</h2>

  <div class="offset-11">
    <%= link_to(new_admin_machine_path,style:"font-size:40px; color:block;") do %>
    <i class="fas fa-plus-circle"></i>
    <% end %>
  </div>

  <table  class="table table-hover">
    <thead>
      <tr>
        <th>型式名</th>
        <th>説明文</th>
        <th>ジャンル名</th>
      </tr>
    </thead>

    <tboddy>
      <% @machines.each do |machine| %>
        <tr>
          <td><%= link_to machine.name, admin_machine_path(machine.id) %></td>
          <td><%= machine.explanation %></td>
          <td><%= machine.genre.name %></td>
        </tr>
      <% end %>
    </tboddy>
  </table>

</div>