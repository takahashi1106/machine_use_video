<div class="container">
  <h2 class="mt-5">管理者側機械新規投稿表示</h2>

  <div class="row px-5 mx-5">
    <div class="col-6 offset-3">
      <%= form_with model: @new_machine, url: admin_machines_path do |f| %>

      <%#= f.label :'機械動画' %></br>
      <%#= f.text_field :name %></br>
      <div class="field form-group row">
      <%= f.label :型式名, class: "col-4" %>
      <%= f.text_field :name %>
      </div>

      <div class="field form-group row">
      <%= f.label :機械説明文, class: "col-4" %>
      <%= f.text_area :explanation %>
      </div>

      <div class="field form-group row">
      <%= f.label :ジャンル名, class: "col-4" %>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "ジャンルを選んでください"%>
      </div>

      <div class="field form-group row">
      <div class="col-7 offset-4">
      <%= f.submit '新規保存', class: 'btn btn-primary' %>
      </div>
      </div>
      <% end %>
    </div>
  </div>

</div>