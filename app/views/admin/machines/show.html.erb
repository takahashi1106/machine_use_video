<div class="container">
  <h2 class="pt-5">機械詳細画面</h2>
    <div class="mt-5">
      <div class="row">
        <div class="col-lg-5">
        <% if @machine.video.attached? %>
        <%= video_tag url_for(@machine.video),controls: true, muted: true, class: 'sized'  %>
        <% end %>
        </div>
          <div class="col-lg-7">
            <table class="table table-borderless">
              <tbody>
                <tr><th></th><td></td></tr>
                <tr><th></th><td></td></tr>
                <tr><th>型式</th><td><%= @machine.name %></td></tr>
                <tr><th>説明文</th><td><%= @machine.explanation %></td></tr>
                <tr><th>ジャンル名</th><td><%= @machine.genre.name %></td></tr>
              </tbody>
            </table>
              <div class="mt-5">
              <%= link_to "編集", edit_admin_machine_path(@machine), class: "btn btn-success btn-lg px-5" %>
              </div>
          </div>
      </div>
    </div>


<%
=begin
%>
          <div class="mt-5">
            <%= render 'layouts/errors',obj: @error_comment %>
              <div class="row">
                <div class="col-lg-12">
                  <table>
                    <tbody>
                      <% if admin_signed_in? %>
                        <% @machine.machine_comments.each do |machine_comment| %>
                          <tr>
                            <th>
                              <div class="text-left">
                                <%= machine_comment.created_at.strftime('%Y/%m/%d') %> : <%= machine_comment.user.user_name %>
                              </div>
                            </th>
                              <td>
                                <div class="text-left">
                                : <%= machine_comment.comment %>
                                </div>
                              </td>
                                <td>
                                  <div class="text-left">
                                  <%= link_to "削除", machine_machine_comment_path(machine_comment.machine, machine_comment), method: :delete, "data-confirm" => '本当に削除しますか？',class: "text-danger" %>
                                  </div>
                                </td>
                            </tr>
                        <% end %>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
          </div>
<%
=end
%>
</div>
