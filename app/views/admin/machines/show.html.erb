<div class="container">
  <h2 class="mt-5">機械詳細画面</h2>
    <div class="mt-5">
      <div class="row">
        <div class="col-lg-5">
        <% if @machine.video.attached? %>
        <%= video_tag url_for(@machine.video), size: "300x300", controls: true %>
        <% end %>
        </div>
          <div class="col-lg-7">
            <table class="table table-borderless">
              <tbody>
                <tr><th></th><td></td></tr>
                <tr><th></th><td></td></tr>
                <tr><th>型式</th><td><%= @machine.name %></td></tr>
                <tr><th>説明文</th><td><%= @machine.explanation %></td></tr>
                <tr><th>ジャンル名</th><td><%= @machine.genre.name %></td></tr>
              </tbody>
            </table>
              <div class="mt-5">
              <%= link_to "編集", edit_admin_machine_path(@machine), class: "btn btn-success btn-lg px-5" %>
              </div>
          </div>
      </div>
    </div>

    <div class="mt-5">
      <div class="row">
        <div class="col-lg-6">
          <% if admin_signed_in? %>
            <% @machine.machine_comments.each do |machine_comment| %>
              <%= machine_comment.created_at.strftime('%Y/%m/%d') %>
              <%= machine_comment.user.user_name %>
              <%= machine_comment.comment %>
              <%= link_to "削除", machine_machine_comment_path(machine_comment.machine, machine_comment), method: :delete, "data-confirm" => '本当に削除しますか？',class: "text-danger" %></br>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
</div>