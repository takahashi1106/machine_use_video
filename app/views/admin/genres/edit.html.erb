<div class="container">
  <h2 class="pt-5">ジャンル編集画面</h2>
    <div class="mt-5">
      <div class="row justify-content-center">
        <%= form_with model: @genre, url: admin_genre_path do |f| %>
          <div class="form-group row">
            <div class="col-lg-5">
            <%= f.label :ジャンル名 %>
            </div>
              <div class="col-lg-6">
              <%= f.text_field :name %>
              </div>
          </div>
            <div class="mt-3">
              <div class="field">
              <%= f.submit '保存', class: 'btn btn-primary' %>
              </div>
            </div>
        <% end %>
      </div>
    </div>
</div>