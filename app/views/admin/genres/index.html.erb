<div class="container">
    <h2 class="mt-5">管理者側ジャンル追加画面</h2>

  <div class="row px-5 mx-5">
    <div class="col-7 offset-3">
      <%= render 'layouts/errors', obj: @new_genre %>
        <%= form_with model: @new_genre, url: admin_genres_path do |f| %>
          <div class="field form-group row">
            <%= f.label :ジャンル名, class: "col-3" %>
            <%= f.text_field :name %>
          </div>

          <div class="field form-group row">
            <div class="col-7 offset-4">
              <%= f.submit '新規保存', class: 'btn btn-primary' %>
            </div>
          </div>
        <% end %>

        <table class="table table-sm">
          <thead>
            <tr>
              <th colspan="2"></th>
            </tr>
          </thead>

          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.name %></td>
                <td><%= link_to '編集', edit_admin_genre_path(genre.id), class: 'btn btn-success' %></td>
              </tr>
            <% end %>
          </tobody>
        </table>

    </div>
  </div>
</div>