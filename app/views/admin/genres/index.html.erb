<div class="container">
  <h2 class="pt-5">ジャンル追加画面</h2>
    <div class="mt-5">
      <div class="row">
        <div class="col-lg-5">
          <%= render 'layouts/errors', obj: @new_genre %>
            <%= form_with model: @new_genre, url: admin_genres_path do |f| %>
              <div class="field form-group row">
              <%= f.label :ジャンル名, class: "col-4" %>
              <%= f.text_field :name %>
              </div>
                <div class="row justify-content-center">
                <%= f.submit '新規保存', class: 'btn btn-primary' %>
                </div>
            <% end %>
        </div>

        <div class="col-lg-7">
          <table class="table">
            <tbody>
              <% @genres.each do |genre| %>
                <tr>
                  <td><%= genre.name %></td>
                  <td><%= link_to '編集', edit_admin_genre_path(genre.id), class: 'btn btn-success' %></td>
                  <td><%= link_to '削除', admin_genre_path(genre.id), method: :delete, "data-confirm" => "本当に削除しますか？" , class: 'btn btn-danger' %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
  </div>

  <div class="mt-4">
    <ul class="pagination justify-content-center">
    <%= paginate @genres, theme: 'bootstrap-5' %>
    </ul>
  </div>

</div>